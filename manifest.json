{
    "manifest_version": 3,
    "name": "Magus Market estoque",
    "version": "2.0",
    "description": "Faça todo o controle e sincronização do seu estoque aqui.",
    "permissions": ["activeTab"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "logo.png"
    },
    "icons": {
        "48": "logo.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["libs/sweetalert2.all.min.js", "content.js"],
        "run_at": "document_end"
      }
    ]
  }
  